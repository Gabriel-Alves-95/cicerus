{
  "compilerOptions": {    
    "target": "es2016",                 

    /* Modules */
    "module": "commonjs",  
    "rootDir": "./src", 

    /* Emit */    
    "outDir": "./build",

    /* Interop Constraints */    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,                             

    /* Completeness */    
    "skipLibCheck": true
  }
}
